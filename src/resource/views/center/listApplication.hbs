<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/center">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="/center/danhsachdonkd">Danh Sách Đơn Kiểm Định</a></li>
        </ol>
    </div>
</div>

<div class="col">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh Sách Đơn Kiểm Định</h4>
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Sản Phẩm</th>
                            <th scope="col">Trạng Thái</th>
                            <th scope="col">Doanh Nghiệp</th>
                            <th scope="col">Ngày Gửi</th>
                            <th style="text-align:center ;" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                            <tr>
                                <td>{{this.index}}</td>
                                <td><a href="/center/donkiemdinh/{{this._id}}">{{this.TenSanPham}}</a></td>
                                <td><span class="badge badge-success px-2">Sale</span></td>
                                <td>{{this.UserName}}</td>
                                <td>{{this.CreateAt}}</td>
                                <td style="text-align: center;"><span><a href="/center/donkiemdinh/{{this._id}}" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a onclick="return confirm('Are you sure?')" href="/center/deleteapplication?ID={{this._id}}" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash color-danger"></i></a></span>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>