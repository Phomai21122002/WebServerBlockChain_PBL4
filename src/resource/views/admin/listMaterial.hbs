<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="/admin/danhsachnguyenlieu">Danh Sách Nguyên Liệu</a></li>
        </ol>
    </div>
</div>

<div class="col">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh Sách Nguyên Liệu</h4>
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">Tên Nguyên Liệu</th>
                            <th scope="col">Trạng Thái</th>
                            <th scope="col">Nguồn Gốc</th>
                            <th style="text-align:center ;" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each data}}
                            <tr>
                                <td>{{this.TenNguyenLieu}}</td>
                                <td><span class="badge badge-success px-2">Sale</span></td>
                                <td>{{this.DiaChi}}</td>
                                <td style="text-align: center;"><span><a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a><a href="#" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a></span>
                                </td>
                            </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>