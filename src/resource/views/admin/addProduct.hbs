        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thêm Sản Phẩm</h4>
                    <div class="form-validation">
                        <form class="form-valide" action="/admin/addproduct" method="post">
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">Tên Sản Phẩm<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input  type="text" class="form-control" id="val-username" name="TenSanPham" placeholder="Enter a username.." required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">Mô Tả<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <textarea name="MoTa" class="form-control h-150px" rows="6" id="comment"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">Công Dụng<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-6">
                                    <input name="CongDung"  type="text" class="form-control" id="val-username" name="userName"  required>
                                </div>
                            </div>


                            <h4 class="card-title">Thành Phần</h4>
                            <div class="basic-form">
                                <div class="form-group">
                                    <div class="form-check mb-3">
                                        <label class="form-check-label">
                                            <input name="array" type="checkbox" class="form-check-input" value="1">Option 1</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <label class="form-check-label">
                                            <input name="array" type="checkbox" class="form-check-input" value="2">Option 2</label>
                                    </div>
                                        <div class="form-check mb-3">
                                        <label class="form-check-label">
                                            <input name="array" type="checkbox" class="form-check-input" value="3">Option 2</label>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-lg-8 ml-auto">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
