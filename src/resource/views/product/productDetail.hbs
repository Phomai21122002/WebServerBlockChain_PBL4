<script>
    window.addEventListener('load' , () => {
        const relationshipForm = document.querySelector('.form-relationship');
        const relationshipCart = document.querySelector('.relationship-cart');
        const relationshipItem = document.querySelectorAll('.form-item_1');
        const leftbtn = document.querySelector('.left-btn');
        const rightbtn = document.querySelector('.right-btn');

        const itemWidth = 260;
        const itemLength = relationshipItem.length;
        let PositionX = 0;
        let i = 0;

        leftbtn.addEventListener('click', () => {
            HandleChangeItem(-1);
        })

        rightbtn.addEventListener('click', () => {
            HandleChangeItem(1);
        })

        function HandleChangeItem(dem) {
            if(dem == 1) {
                if(i >= itemLength - 4) {
                    i = 0;
                    PositionX = 0;
                    relationshipCart.style = `transform: translateX(${PositionX}px);`
                } else {
                    PositionX = PositionX + itemWidth;
                    relationshipCart.style = `transform: translateX(-${PositionX}px);`
                    i++;
                }
            } else {
                if(i <= 0 ) {
                    i = 0;
                    PositionX = 0;
                } else {
                    PositionX = PositionX + itemWidth;
                    relationshipCart.style = `transform: translateX(${PositionX}px);`
                    i--;
                }
            }
        }
        setInterval(() => {
            rightbtn.click();
        }, 1000)
    })

</script>   