    <link href="/template/css/style.css" rel="stylesheet">
     {{!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" /><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" /> --}}
     <link rel="stylesheet" href="/font/fontawesome-free-6.1.2-web/css/all.css">
</head>

<body class="h-100">
    
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

       <div class="login-form-bg h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100">
                    <div class="col-xl-6">
                        <div class="form-input-content">
                            <div class="card login-form mb-0" id="form-info">
                            <div class="card-body pt-5">
                                
                                    <a class="text-center" href="index.html"> <h4>SIGN UP</h4></a>
        
                                <div action="/register/apply" method="post" class="mt-5 mb-5 login-input">
                                    <div class="form-group">
                                        <input id="inputName" name="name" type="text" class="form-control"  placeholder="Name" required>
                                    </div>
                                    <div class="form-group">
                                        <input id="inputEmail" name="email" type="email" class="form-control"  placeholder="Email" required>
                                    </div>
                                    <div class="form-group">
                                        <input id="inputPassword" name="password" type="password" class="form-control" placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input id="inputConfirm" name="confirmpassword" type="password" class="form-control" placeholder="Confirm Password" required>
                                    </div>
                                    <button type="submit" class="btn login-form__btn submit w-100" id="nextBtn">Next</button>
                                </div>
                                    <p class="mt-5 login-form__footer">Have account <a href="/login" class="text-primary">Sign In </a> now</p>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="card login-form mb-0" id="form-business-name" style="position: relative;">
                                <span class="back-btn" style="">
                                    <i style="" class="fa-solid fa-arrow-left"></i>
                                </span>
                                <div class="card-body pt-5">
                                    <a class="text-center" href=""> <h4>Nhập Tên Doanh Nghiệp</h4></a>
                                    <form class="mt-5 mb-3 login-input">
                                        <div class="form-group">
                                            <input id="businessName" type="text" class="form-control" placeholder="Business Name" required>
                                        </div>
                                        <button class="btn login-form__btn submit w-100">Sign in</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <!--**********************************
        Scripts
    ***********************************-->
    <script src="/template/plugins/common/common.min.js"></script>
    <script src="/template/js/custom.min.js"></script>
    <script src="/template/js/settings.js"></script>
    <script src="/template/js/gleek.js"></script>
    <script src="/template/js/styleSwitcher.js"></script>
    <script src="/js/main.js"></script>

    <style>
        .back-btn{
            position: absolute; top: 15px;left: 20px; background-color: #ccc;  width: 30px; height: 30px; border-radius: 100%;
            cursor: pointer;
        }   
        .back-btn:hover{
            opacity: 0.8;
        }
        .back-btn i {
            margin-top: 6px; margin-left: 7px; font-size: 18px;
        }
        #form-business-name{
            animation: fade-left 0.5s ease;
        }


        @keyframes fade-left {
            from{
                opacity: 0;
                transform: translateX(-50px);
            }
            to{
                opacity: 1;
                transform: translateX(0);
            }
        }
    </style>
</body>
</html>





