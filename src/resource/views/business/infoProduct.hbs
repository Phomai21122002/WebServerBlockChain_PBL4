 <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/business">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/business/sanpham/{{id}}">Thông Tin Sản Phẩm</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->

            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" action="#" method="post">
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-username">Tên Sản Phẩm<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-username" name="userName" value="{{data.TenSanPham}}" >
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Nhà Sản Xuất<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-email" name="email" value="{{data.NhaSanXuat}}" >
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Mô tả<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <textarea name="CongDung" class="form-control h-150px" rows="6" id="comment">{{data.MoTa}}</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Công Dụng<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <textarea name="CongDung" class="form-control h-150px" rows="6" id="comment">{{data.CongDung}}</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Hướng Dẫn Sử Dụng<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <textarea name="HuongDanSuDung" class="form-control h-150px" rows="6" id="comment">{{data.HuongDanSuDung}}</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-email">Nơi Sản Xuất<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-email" name="email" value="{{data.NoiSanXuat}}" >
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label" for="val-confirm-password">Số Điện Thoại<span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" id="val-confirm-password" name="phone" value="0121732121" >
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <a href="/business/danhsachsanpham" type="submit" class="btn btn-primary">Back</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>